@model TaskApplication.Models.Task

<div class="confirmation-form">
    <h2>Are you sure you want to mark "@Model.TaskName" as complete?</h2>
    <form method="post">
        <input type="hidden" asp-for="TaskID" />
        <input type="hidden" asp-for="TaskName" />
        <input type="hidden" asp-for="DueDate" />
        <input type="hidden" asp-for="Quadrant" />
        <input type="hidden" asp-for="CategoryID" />
        <input type="hidden" asp-for="CompletionStatus" value="true"/>
        <button type="submit" class="delete-btn">Mark as Complete</button>
        <a asp-controller="Home" asp-action="Index" class="cancel-btn">Cancel</a>
    </form>
</div>
