<body>
    <div class="container">
        <h1>Task Manager</h1>
        <form>
            <div class="form-group">
                <label for="task">Task <span class="required">*</span></label>
                <input type="text" class="form-control" id="task" name="task" required>
            </div>
            <div class="form-group">
                <label for="due-date">Due Date</label>
                <input type="date" class="form-control" id="due-date" name="due-date">
            </div>
            <div class="form-group">
                <label for="quadrant">Quadrant <span class="required">*</span></label>
                <select class="form-control" id="quadrant" name="quadrant">
                    <option value="1">Quadrant 1 - Urgent</option>
                    <option value="2">Quadrant 2 - Not Urgent</option>
                    <option value="3">Quadrant 3 - Not Important</option>
                    <option value="4">Quadrant 4 - Not Urgent or Important</option>
                </select>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" id="category" name="category">
                    <option value="home">Home</option>
                    <option value="school">School</option>
                    <option value="work">Work</option>
                    <option value="church">Church</option>
                </select>
            </div>
            <div class="form-group">
                <label for="completed">Completed</label>
                <select class="form-control" id="completed" name="completed">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
